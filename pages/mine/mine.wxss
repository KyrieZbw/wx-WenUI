.wrap {
  width: 100%;
  height: 200rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #2c2d32;
}

.wrap button {
  background: #d6f046;
  width: 100px;
  height: 70rpx;
  line-height: 70rpx;
  position: absolute;
  left: 50%;
  bottom: 20rpx;
  transform: translateX(-50%);
  font-size: 28rpx;
  letter-spacing: 4rpx;
}

.wrap input {
  width: 94%;
  height: 70rpx;
  border-radius: 10rpx;
  position: absolute;
  left: 50%;
  top: 20rpx;
  transform: translateX(-50%);
  background: #e1e1e4;
  padding-left: 20rpx;
  font-size: 28rpx;
}

.messageWrap {
  height: calc(100vh - 220rpx);
  width: 100%;
  box-sizing: border-box;
}

.message {
  background: #2c2d32;
  width: 94%;
  color: #e1e1e4;
  margin: 20rpx auto 0;
  border-radius: 20rpx;
  display: flex;
  justify-content: flex-start;
  padding: 20rpx;
  box-sizing: border-box;
}

.message image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.message > view {
  flex: 1;
  line-height: 50rpx;
  font-size: 28rpx;
}

.message .content {
  font-size: 34rpx;
}
