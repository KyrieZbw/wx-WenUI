/* components/Actionsheet/actionsheet.wxss */

.asMask {
  width: 100vw;
  height: 100vh;
  position: fixed;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.6);
  overflow: hidden;
  left: 0;
  top: 0;
}

.wrap {
  width: 100%;
  color: #e1e1e4;
  position: fixed;
  bottom: 0;
  left: 0;
  transform: translate3d(0, 100%, 0);
  z-index: 10000;
}

.wrap view {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  background: #2c2d32;
}

.wrap .cancel {
  margin-top: 20rpx;
}

@keyframes show {
  from {
    transform: translate3d(0, 100%, 0);
  }

  to {
    transform: translate3d(0, 0, 0);
  }
}

.wrap.isShow {
  animation: show 0.3s forwards;
}

@keyframes hide {
  from {
    transform: translate3d(0, 0, 0);
  }

  to {
    transform: translate3d(0, 100%, 0);
  }
}

.wrap.isHide {
  animation: hide 0.3s forwards;
}
