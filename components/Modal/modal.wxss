/* components/Dialog/dialog.wxss */
.mask_layer {  
  width: 100vw;  
  height: 100vh;  
  position: fixed;  
  z-index: 1000;  
  background: rgba(0, 0, 0, .6);
  overflow: hidden;  
  left: 0;
  top: 0;
}  
.modal_box {  
  width: 76%;  
  overflow: hidden;  
  position: fixed;  
  top: 50%;  
  left: 50%;  
  transform: translate(-50%,-50%);
  z-index: 1001;  
  background: #383941;  
  border-radius: 3px; 
  color: #e1e1e4; 
}  
  
.title {  
  line-height: 100rpx;
  text-align: center;  
  background-color: gazure; 
  margin-bottom: 30rpx; 
  border-bottom:1rpx solid #e1e1e4;
  font-size: 36rpx;
}  
  
.content {  
  overflow-y: scroll; /*超出父盒子高度可滚动*/
  line-height: 40rpx;  
  font-size: 32rpx;
}  
  
.btn {  
  width: 100%;  
  margin-top: 60rpx;  
  display: flex;  
  flex-direction: row;  
  align-items: center;  
  justify-content: space-between;  
  box-sizing: border-box;  
  background-color: #e1e1e4; 
  font-size: 36rpx; 
}  
  
.cancel {  
  width: 100%;  
  padding: 10px;  
  text-align: center;  
  color: #383941;  
}  
  
.Sure {  
  width: 100%;  
  padding: 10px;  
  background-color: #d6f046;  
  text-align: center;  
  color:#383941;
}  
  
.modalMsg {  
  text-align: center;  
  margin-top: 30rpx;  
  display: block;
  margin-bottom: 30rpx;  
} 